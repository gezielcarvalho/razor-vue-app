@page
@model RazorVueApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
    bool isDevelopment = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development";
}

<div id="vue-app">
    <!-- Vue components will render here -->
</div>

@section Scripts {
    @if (isDevelopment)
    {
        <!-- Load from Webpack DevServer for hot reloading -->
        <script src="http://localhost:9000/bundle.js"></script>
    }
    else
    {
        <!-- Load from static dist folder in production -->
        <script src="~/dist/bundle.js" asp-append-version="true"></script>
    }
}
